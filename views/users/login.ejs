<% layout('layouts/boilerplate')%>

<div class="container d-flex justify-content-center align-items-center mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
      <div class="card shadow">
        <img
          src="https://images.unsplash.com/photo-1461695008884-244cb4543d74?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=3262&q=80"
          alt=""
          class="card-img-top"
        />
        <div class="card-body">
          <h1 style="text-align: center">Login</h1>
          <form action="/login" method="POST" class="validated-form" novalidate>
            <div class="mb-3">
<i class="glyphicon glyphicon-user"></i>
              <label class="form-label" for="username">Username</label>

              <input
                class="form-control"
                type="text"
                id="username"
                name="username"
placeholder="Username"
                autofocus
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>

            <div class="mb-3">
<i class="glyphicon glyphicon-lock"></i>
              <label class="form-label" for="password">Password</label>
              
              <input
                class="form-control"
                type="password"
                id="password"
                name="password"
placeholder="Password"
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="d-grid gap-2 col-12 mx-auto">
              <button class="btn btn-primary btn-block">Login</button>
            </div>
          </form>
 <a href="/campgrounds">Go Back</a>

        </div>
      </div>
    </div>

  </div>
</div>
